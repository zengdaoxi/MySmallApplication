<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#5594e2"
        android:elevation="3dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的12306"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#efefef"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_first">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="我的信息"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="手机验核"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar1"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_safe"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="我的保险"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar2"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_eat"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="我的餐饮"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar4"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_second"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_rode"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="铁路畅行"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar6"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_three"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_come"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="出行向导"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar7"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ser"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="温馨服务"
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>

                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar8"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="信息服务"
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar44"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_four"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_travel"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="旅游休闲"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar67"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_five"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_update"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="数据更新"
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar87"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="系统通知"
                        android:textColor="#040404"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar11"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:text="关于我们"
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right"
                        android:padding="15dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/div_tab_bar47"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="#ef2716"
                android:text="退出当前账号"
                android:textColor="#ffffff"
                android:textSize="15dp"
                />

        </LinearLayout>
    </ScrollView>





</LinearLayout>
