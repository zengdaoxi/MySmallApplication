<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:orientation="vertical"
        tools:context=".RegisterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#5594e2"
            android:elevation="3dp"
            >

            <ImageView
                android:id="@+id/pic_contact_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:padding="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:text="注册"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="基本信息"
            android:textColor="#040404"
            android:textSize="18sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:stretchColumns="1">
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="用  户  名："
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="字母、数字或“_”,6-30位"
                        android:layout_marginLeft="30dp"
                        android:textSize="15sp"/>
                </TableRow>

                <View
                    android:id="@+id/div_tab_bar"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray" />

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="密        码："
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="不少于6位"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:layout_marginLeft="30dp"/>
                </TableRow>

                <View
                    android:id="@+id/div_tab_bar2"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray" />

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:text="确认密码："
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/editPassword2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请再次输入密码"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"
                        android:inputType="textPassword" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="详细信息"
            android:textColor="#040404"
            android:textSize="18sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:text="姓        名："
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/trueName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入真实姓名，以便购票"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                </TableRow>

                <View
                    android:id="@+id/div_tab_bar3"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray" />

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:text="证件类型："
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:editable="false"
                        android:text="二代身份证"
                        android:textSize="15sp"
                        android:textColor="#040404"
                        android:layout_marginLeft="30dp"/>
                </TableRow>

                <View
                    android:id="@+id/div_tab_bar4"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray" />

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:text="证件号码："
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/PeopleNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请准确完成填写"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="联系方式"
            android:textColor="#040404"
            android:textSize="18sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:text="手机号码："
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/PhoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请准确填写您的手机号码"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                </TableRow>

                <View
                    android:id="@+id/div_tab_bar5"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_above="@id/rg_tab_bar"
                    android:background="@android:color/darker_gray" />

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:text="邮箱地址："
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请准确填写邮箱地址"
                        android:textSize="15sp"
                        android:layout_marginLeft="30dp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="附加信息"
            android:textColor="#040404"
            android:textSize="18sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:text="旅客类型："
                        android:textColor="#040404"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/peopleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:editable="false"
                        android:text="成人"
                        android:textSize="15sp"
                        android:textColor="#040404"
                        android:layout_marginLeft="30dp"/>
                </TableRow>


            </TableLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#5594e2"
            android:text="确定"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="返回登录" />
    </LinearLayout>

</ScrollView>

    </LinearLayout>
</LinearLayout>