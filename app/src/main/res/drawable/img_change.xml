<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 默认时的背景图片-->
    <item android:drawable="@drawable/change1"></item>

    <!-- 非触摸模式（有焦点有点击）按下的时候 -->
    <item android:state_pressed="true" android:state_focused="true" android:drawable="@drawable/change3"/>

    <!-- 触摸模式（无焦点有点击）按下的时候 -->
    <item android:state_pressed="true" android:state_focused="false" android:drawable="@drawable/change3"/>

    <!-- 有焦点的时候 -->
    <item android:state_focused="true" android:drawable="@drawable/change3" />

</selector>